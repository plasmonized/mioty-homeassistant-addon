{
  "name": "Temperature Humidity Sensor",
  "version": "1.0",
  "description": "Standard Temperature/Humidity Sensor Blueprint",
  "devices": [
    "TH_SENSOR_V1",
    "TH_SENSOR_V2"
  ],
  "payload": {
    "temperature": {
      "type": "uint16",
      "length": 2,
      "scale": 0.1,
      "offset": -40.0,
      "unit": "\u00b0C",
      "description": "Temperature measurement"
    },
    "humidity": {
      "type": "uint16",
      "length": 2,
      "scale": 0.01,
      "offset": 0.0,
      "unit": "%",
      "description": "Relative humidity"
    },
    "battery": {
      "type": "uint8",
      "length": 1,
      "scale": 0.1,
      "offset": 0.0,
      "unit": "V",
      "description": "Battery voltage"
    }
  }
}